<div class="row web-videos-controls-container">
	<div style="margin-top: -275px;">
		<div class="col-md-6">
			<div class="web-round-controller" id="video-3-controller" onclick="toggleVideo(3);">
				<%= image_tag('play_btn.png') %>	
			</div>
		</div>
		<div class="col-md-6">
			<div class="web-round-controller" id="video-4-controller" onclick="toggleVideo(4);">
				<%= image_tag('play_btn.png') %>	
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">

	function toggleVideo(videoID) {
		var video = $('#video-'+videoID)[0];
		var controller = $('#video-'+videoID+'-controller');
		
		$('.web-video').each(function(){
			$(this)[0].pause();
		})
		
		$('.web-round-controller').each(function(v){
			$(this).fadeIn(200);
		})
		
		controller.fadeOut(200);
		video.play();
	    
	    video.onended = function(e) {
			controller.fadeIn(200);
	    }
		
	}
	
	$('video').click(function(){
		$(this)[0].pause();
		$('#'+this.id+'-controller').fadeIn(200);
	})
	

</script>